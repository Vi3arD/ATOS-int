@model ATOS_v1._1.Models.Room

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit @Model.Name</h2>

<div class="row">
    <div class="col-sm-12 col-xs-12">
        <a class="a-action" href="/Room/Index">
            <span class="glyphicon glyphicon-chevron-left"></span>
            Back to List
        </a>
    </div>
</div>

<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <hr />

        <div class="form-horizontal col-sm-6 col-xs-12">

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-3 col-xs-12" })
                <div class="col-md-9 col-xs-12">
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CountChair, new { @class = "control-label col-md-3 col-xs-12" })
                <div class="col-md-9 col-xs-12">
                    @Html.EditorFor(model => model.CountChair)
                    @Html.ValidationMessageFor(model => model.CountChair)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IsBlackboard, new { @class = "control-label col-md-3 col-xs-12" })
                <div class="col-md-9 col-xs-12">
                    @Html.EditorFor(model => model.IsBlackboard)
                    @Html.ValidationMessageFor(model => model.IsBlackboard)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IsProjector, new { @class = "control-label col-md-3 col-xs-12" })
                <div class="col-md-9 col-xs-12">
                    @Html.EditorFor(model => model.IsProjector)
                    @Html.ValidationMessageFor(model => model.IsProjector)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-3 col-xs-12" })
                <div class="col-md-9 col-xs-12">
                    @Html.EditorFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-9 col-xs-12">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>