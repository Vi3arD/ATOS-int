@model ATOS_v1._1.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

<h2>Registration</h2>

<hr />

<div class="row">
    <div class="form-horizontal col-sm-6 col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-4 col-xs-12" })
                    <div class="col-md-8 col-xs-12">
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-4 col-xs-12" })
                    <div class="col-md-8 col-xs-12">
                        @Html.EditorFor(model => model.Password)
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ConfirmPassword, new { @class = "control-label col-md-4 col-xs-12" })
                    <div class="col-md-8 col-xs-12">
                        @Html.EditorFor(model => model.ConfirmPassword)
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FullName, new { @class = "control-label col-md-4 col-xs-12" })
                    <div class="col-md-8 col-xs-12">
                        @Html.EditorFor(model => model.FullName)
                        @Html.ValidationMessageFor(model => model.FullName)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8 col-xs-12">
                        <input type="submit" value="Register" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>