
@{
    ViewBag.Title = "BookRoom";
}

<h2>Booking</h2>

<div class="row">
    <div class="col-xs-12">
        <form method="post">
            <div class="form-horizontal">
                <input type="text" name="IdRoom" value="@ViewBag.IdRoom" hidden />
                <div class="form-group">
                    <label class="control-label col-xs-2" for="Description">Description</label>
                    <div class="col-xs-10">
                        <input class="input-rem" type="text" name="Description" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-xs-2" for="DateStart">Start</label>
                    <div class="col-xs-10">
                        <input class="input-rem" type="date" name="DateStart" />
                        <input class="input-rem" type="time" name="TimeStart" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-xs-2" for="DateEnd">End</label>
                    <div class="col-xs-10">
                        <input class="input-rem" type="date" name="DateEnd" />
                        <input class="input-rem" type="time" name="TimeEnd" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-2">
                    </div>
                    <div class="col-xs-10">
                        <input class="btn btn-default" type="submit" value="Save" />
                    </div>
                </div>
                </div>
</form>
    </div>
</div>

