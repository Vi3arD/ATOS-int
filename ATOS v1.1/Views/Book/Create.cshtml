@model ATOS_v1._1.Models.Book

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Book room</h2>
<div class="row">
    <div class="col-sm-1 col-xs-4">
        <a class="a-action" href="/Room/Details/@ViewBag.IdRoom">
            <span class="glyphicon glyphicon-chevron-left"></span>
            Back
        </a>
    </div>
</div> 

<hr />

<div class="row">
    <div class="form-horizontal col-sm-6 col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true)

                @Html.HiddenFor(model => model.IdRoom, new { @Value = @ViewBag.IdRoom })
                @Html.HiddenFor(model => model.Status, new { @Value = "0" })

                <div class="form-group">
                    @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-3 col-xs-12" })
                    <div class="col-md-9 col-xs-12">
                        @Html.EditorFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DateStart, new { @class = "control-label col-md-3 col-xs-12" })
                    <div class="col-md-9 col-xs-12">
                        <input type="datetime-local" name="DateStart" />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DateEnd, new { @class = "control-label col-md-3 col-xs-12" })
                    <div class="col-md-9 col-xs-12">
                        <input type="datetime-local" name="DateEnd" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-9 col-xs-12">
                        <input type="submit" value="Book" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
